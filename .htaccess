RewriteRule ^annual-report/?$ /annual-report.php [L]
RewriteRule ^privacy-policy/?$ /privacy-policy.php [L]
RewriteRule ^alumni/?$ /alumni.php [L]

# Dynamic URL Rewrites for Clean URLs
RewriteCond %{THE_REQUEST} \s/faculty\.php\?url=([^&\s]+) [NC]
RewriteRule ^faculty\.php$ /faculty/%1? [R=301,L]
RewriteRule ^faculty/([^/]+)$ /faculty.php?url=$1 [L]

RewriteCond %{THE_REQUEST} \s/faculty-detail\.php\?url=([^&\s]+) [NC]
RewriteRule ^faculty-detail\.php$ /faculty/details/%1? [R=301,L]
RewriteRule ^faculty/details/([^/]+)$ /faculty-detail.php?url=$1 [L]

RewriteCond %{THE_REQUEST} \s/blog\.php\?url=([^&\s]+) [NC]
RewriteRule ^blog\.php$ /blog/%1? [R=301,L]
RewriteRule ^blog/([^/]+)$ /blog.php?url=$1 [L]

# PHP Handler
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php74 .php .php7 .phtml
</IfModule>
