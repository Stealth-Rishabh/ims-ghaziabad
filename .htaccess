RewriteRule ^Admission/fpm-b-school-ranking/?$ /fpm-b-school-ranking.php [L]
RewriteRule ^Admission/fpm-e-brochure/?$ /fpm-e-brochure.php [L]

# Faculty Section
RewriteRule ^faculty/accounts-department/?$ /accounts-department.php [L]
RewriteRule ^faculty/academics-department/?$ /academics-department.php [L]
RewriteRule ^faculty/administration/?$ /administration.php [L]
