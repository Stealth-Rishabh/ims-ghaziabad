# Redirect old /blogs URL to new /blog URL for consistency
RewriteRule ^blogs/?$ /blog [R=301,L]

RewriteRule ^blog/?$ /blogs.php [L]

RewriteRule ^blog/page/([0-9]+)/?$ blogs.php?page=$1 [L,QSA]

RewriteRule ^contact/?$ /contact.php [L]
RewriteRule ^best-pgdm-college-in-delhi-ncr/?$ /best-pgdm-college-in-delhi-ncr.php [L]
RewriteRule ^pgdm-admission-2025-ims-ghaziabad/?$ /pgdm-admission-2025-ims-ghaziabad.php [L]
